{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "STRIPE_SECRET_KEY",
    "MONGO_URI",
    "STRIPE_WEBHOOK_SECRET",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {}
  }
}
