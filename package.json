{
  "devDependencies": {
    "concurrently": "^9.2.0",
    "typescript": "^5.5.0",
    "tsx": "^4.7.0",
    "nodemon": "^3.1.4",
    "@types/node": "^20.12.7"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "nodemon --watch server --ext ts --exec \"tsx server/server.ts\""
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  }
}